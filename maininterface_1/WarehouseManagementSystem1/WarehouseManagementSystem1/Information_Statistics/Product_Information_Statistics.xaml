        <Label Content="型号" HorizontalAlignment="Left" Margin="190,190,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="发货状态" HorizontalAlignment="Left" Margin="170,250,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="20"/>
        <Label Content="起始日期" HorizontalAlignment="Left" Margin="170,310,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <Label Content="终止日期" HorizontalAlignment="Left" Margin="170,370,0,0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
