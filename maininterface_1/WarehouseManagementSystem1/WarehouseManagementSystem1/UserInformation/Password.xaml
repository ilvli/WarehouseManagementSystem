<Window x:Class="WarehouseManagementSystem1.UserInformation.Password"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseManagementSystem1.UserInformation"
        mc:Ignorable="d"
        Title="修改密码" Height="450" Width="800">
    <Grid>
        <Label Content="请输入旧密码" HorizontalAlignment="Left" Margin="198,70,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
        <Label Content="请输入新密码" HorizontalAlignment="Left" Margin="198,150,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
        <PasswordBox Name="OldPBx" HorizontalAlignment="Left" Margin="368,75,0,0" Width="210" VerticalAlignment="Top" FontSize="25"/>
        <PasswordBox Name="NewPBx" HorizontalAlignment="Left" Margin="368,155,0,0" Width="210" VerticalAlignment="Top" FontSize="25"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="130,285,0,0" Width="200" Height="60"  VerticalAlignment="Top" FontSize="25" FontWeight="Bold" Click="Button_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="470,285,0,0" Width="200" Height="60"  VerticalAlignment="Top" FontSize="25" FontWeight="Bold" Click="Button_Click"/>
    </Grid>
</Window>
