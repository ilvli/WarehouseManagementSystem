<Window x:Class="WarehouseManagementSystem1.UserInformation.UserName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WarehouseManagementSystem1.UserInformation"
        mc:Ignorable="d"
        Title="修改用户名" Height="450" Width="800">
    <Grid>
        <Label Content="请输入密码" HorizontalAlignment="Left" Margin="228,75,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
        <PasswordBox x:Name="OldPBx" HorizontalAlignment="Left" Margin="390,80,0,0" Width="210" VerticalAlignment="Top" FontSize="25"/>
        <Label Content="请输入新用户名" HorizontalAlignment="Left" Margin="201,160,0,0" VerticalAlignment="Top" FontSize="25" FontWeight="Bold"/>
        <TextBox Name="NameBox" HorizontalAlignment="Left" Margin="390,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="204" FontSize="25"/>
        <Button Content="确定" HorizontalAlignment="Left" Margin="130,285,0,0" Width="200" Height="60"  VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Click="Button_Click"/>
        <Button Content="取消" HorizontalAlignment="Left" Margin="470,285,0,0" Width="200" Height="60"  VerticalAlignment="Top" FontSize="20" FontWeight="Bold" Click="Button_Click"/>
    </Grid>
</Window>
